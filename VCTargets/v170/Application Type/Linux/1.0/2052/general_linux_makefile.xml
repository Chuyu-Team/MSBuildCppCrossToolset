<Rule Name="ConfigurationGeneral" DisplayName="常规" PageTemplate="generic" Description="常规" xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.Categories>
    <Category Name="General" DisplayName="常规" Description="常规"/>
  </Rule.Categories>
  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" Label="Configuration"/>
  </Rule.DataSource>
  <StringProperty Name="OutDir" DisplayName="输出目录" Description="指定输出文件目录的相对路径；可以包含环境变量。" Category="General" Default="$(SolutionDir)$(ConfigurationName)" Subtype="folder" F1Keyword="VC.Project.VCConfiguration.OutputDirectory">
                  <StringProperty.DataSource>
                     <DataSource Persistence="ProjectFile" Label=""/>
                  </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="IntDir" DisplayName="中间目录" Description="指定中间文件目录的相对路径；可以包含环境变量。" Category="General" Default="$(ConfigurationName)" Subtype="folder" F1Keyword="VC.Project.VCConfiguration.IntermediateDirectory">
                  <StringProperty.DataSource>
                     <DataSource Persistence="ProjectFile" Label=""/>
                  </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="BuildLogFile" DisplayName="生成日志文件" Description="指定启用生成记录时要写入的生成日志文件。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="$(ProjectDir)\$(MSBuildProjectName).log" Subtype="file">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="BuildLog" PersistedName="Path"/>
    </StringProperty.DataSource>
  </StringProperty>
  <EnumProperty Name="ConfigurationType" DisplayName="配置类型" Description="指定此配置生成的输出类型。" Category="General" F1Keyword="VC.Project.VCConfiguration.ConfigurationType">
    <EnumValue Name="DynamicLibrary" DisplayName="动态库(.so)" Description="动态库(.so)"/>
    <EnumValue Name="StaticLibrary" DisplayName="静态库(.a)" Description="动态库(.a)"/>
    <EnumValue Name="Application" DisplayName="应用程序(.out)" Description="应用程序(.out)"/>
    <EnumValue Name="Makefile" DisplayName="生成文件" Description="生成文件"/>
  </EnumProperty>
  <DynamicEnumProperty Name="RemoteTarget" DisplayName="远程生成计算机" Description="要用于远程生成、部署和调试的目标计算机或设备。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="" EnumProvider="RemoteTargets">
    <DynamicEnumProperty.DataSource>
      <DataSource Persistence="UserFile" Label=""/>
    </DynamicEnumProperty.DataSource>
  </DynamicEnumProperty>
  <StringProperty Name="RemoteRootDir" DisplayName="远程生成根目录" Description="在远程计算机或设备上指定目录的路径。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Configuration"/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="RemoteProjectRelDir" DisplayName="远程项目相对目录" Description="指定相对于项目的远程根目录的远程计算机上目录的路径。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Configuration"/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="RemoteProjectDir" DisplayName="远程项目目录" Description="指定相对于项目的远程根目录的远程计算机上目录的路径。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="" Visible="false">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="RemoteIntRelDir" DisplayName="远程中间相对目录" Description="指定相对于中间目录的远程根目录的远程计算机上目录的路径。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="" Visible="false">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="RemoteOutRelDir" DisplayName="远程输出相对目录" Description="指定相对于输出目录的远程根目录的远程计算机上目录的路径。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="" Visible="false">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>
  <StringProperty Name="RemoteDeployDir" DisplayName="远程部署目录" Description="在要将项目部署到的远程计算机或设备上指定目录的路径。" F1Keyword="VC.Project.VCConfiguration.BuildLogFile" Category="General" Default="">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>

  <BoolProperty Name="IncrementalBuild" DisplayName="增量生成" Description="基于项目项启用增量生成。如果输入未更改，则跳过生成和远程生成。" Category="General" Default="false" F1Keyword="VC.Project.VCConfiguration.IncrementalBuildAndDeploy">
    <BoolProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </BoolProperty.DataSource>
  </BoolProperty>

  <StringProperty Name="LinuxProjectType" Visible="false">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="Globals" HasConfigurationCondition="false"/>
    </StringProperty.DataSource>
  </StringProperty>

  <StringProperty Name="ProjectName" ReadOnly="true" Visible="false">
  </StringProperty>
  <StringProperty Name="EnableASAN" ReadOnly="true" Visible="false">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label=""/>
    </StringProperty.DataSource>
  </StringProperty>

  <StringProperty Name="RemoteCCompileToolExe" Visible="false"/>
  <StringProperty Name="RemoteCppCompileToolExe" Visible="false"/>
  <StringListProperty Subtype="folder" Name="RemoteCopyIncludeDirectories" DisplayName="远程副本包含目录" Description="指定要从 IntelliSense 的远程 Linux 目标复制的一个或多个目录；如果不止一个，则用分号分隔。" Category="General" F1Keyword="VC.Project.VCClangCompilerTool.RemoteCopyIncludeDirectories">
  </StringListProperty>
  <StringListProperty Subtype="folder" Name="RemoteCopyExcludeDirectories" DisplayName="远程副本排除目录" Description="指定不从 IntelliSense 的远程 Linux 目标复制的一个或多个目录；如果不止一个，则用分号分隔。" Category="General" F1Keyword="VC.Project.VCClangCompilerTool.RemoteCopyExcludeDirectories">
  </StringListProperty>
  <BoolProperty Name="UseCompiler" DisplayName="Intellisense 使用编译器默认值" Description="指定 Intellisense 是否应使用编译器默认定义和包含位置。只有使用的编译器不支持类似于 gcc 的命令选项时，才应为 false。" Category="General" Visible="true" Default="true">
  </BoolProperty>
</Rule>
