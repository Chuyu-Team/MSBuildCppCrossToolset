<Rule Name="LinuxRemoteCopySourcesFile" DisplayName="复制源" PageTemplate="generic" Description="复制源" xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.Categories>
    <Category Name="General" DisplayName="常规" Description="常规"/>
  </Rule.Categories>
  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" Label="Configuration" ItemType="{}{AnyType}"/>
  </Rule.DataSource>

  <StringProperty Subtype="file" Name="RemoteFile" DisplayName="远程文件" Description="指定是否在远程系统上复制文件。选项将替代远程系统上文件的默认名称和位置。" Category="General" F1Keyword="VC.Project.VCLinkerTool.OutputFile"/>
  <BoolProperty Name="RemoteCopyFile" DisplayName="远程复制" Category="General" Description="指定是否在远程系统上复制文件。" F1Keyword="VC.Project.VCFileConfiguration.ExcludedFromBuild"/>
  <BoolProperty Name="RemoteCopyToOutputDir" DisplayName="复制到输出目录" Category="General" Description="指定是否还将文件复制到远程系统上的输出项目目录。" F1Keyword="VC.Project.VCFileConfiguration.ExcludedFromBuild"/>
</Rule>
