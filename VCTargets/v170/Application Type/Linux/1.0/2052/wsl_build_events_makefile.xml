      <DataSource Persistence="ProjectFile" HasConfigurationCondition="true" ItemType="RemotePreBuildEvent" PersistedName="Message"/>
    </StringProperty.DataSource>
  </StringProperty>
  <BoolProperty Name="RemotePreBuildEventUseInBuild" Category="RemotePreBuild" DisplayName="在生成中使用" Description="指定是否将该生成事件从当前配置的生成中排除。" F1Keyword="VC.Project.IVCEventTool.ExcludedFromBuild">
